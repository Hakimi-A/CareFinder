<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Title Bar -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Zakat Calculator"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Input: Gold Weight -->
    <TextView
        android:id="@+id/tvGoldWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Gold Weight (grams):"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/etGoldWeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="e.g., 100"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/tvGoldWeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Input: Type of Gold -->
    <TextView
        android:id="@+id/tvGoldType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Type of Gold:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etGoldWeight"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <Spinner
        android:id="@+id/spGoldType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvGoldType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Input: Current Gold Value -->
    <TextView
        android:id="@+id/tvGoldValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Current Gold Value (RM/gram):"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/spGoldType"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/etGoldValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="e.g., 280"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/tvGoldValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
